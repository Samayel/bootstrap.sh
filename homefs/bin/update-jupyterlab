#!/usr/bin/env bash

set -e

conda remove  -n jupyterlab -y --all
conda create  -n jupyterlab -y -c conda-forge       python=3 jupyter jupyterlab widgetsnbextension
conda install -n jupyterlab -y -c conda-forge       jupyter_contrib_nbextensions
conda install -n jupyterlab -y -c damianavila82     rise

source activate jupyterlab

pip install hide_code

pip install jupyterlab_widgets
# jupyter labextension install --py jupyterlab_widgets
# jupyter labextension enable  --py jupyterlab_widgets

source deactivate jupyterlab

ssh shell 'service jupyterlab restart; service jupyterlab status'
