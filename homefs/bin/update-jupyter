#!/usr/bin/env bash

set -e

conda remove  -n jupyter -y --all
conda create  -n jupyter -y -c conda-forge       python=3 jupyter widgetsnbextension
conda install -n jupyter -y -c conda-forge       jupyter_contrib_nbextensions
conda install -n jupyter -y -c damianavila82     rise

source activate jupyter
pip install hide_code
source deactivate jupyter

ssh shell 'service jupyter restart; service jupyter status'
