frontend ft_tcp80
    mode tcp
    option tcplog

    bind *:80
    bind :::80

    default_backend bk_tcp80_haproxy

backend bk_tcp80_haproxy
    mode tcp
    option tcplog

    server srv_http_haproxy unix@/http.sock send-proxy-v2

frontend ft_http
    mode http
    option httplog
    option forwardfor

    bind unix@/var/lib/haproxy/http.sock accept-proxy

    redirect scheme https code 301
