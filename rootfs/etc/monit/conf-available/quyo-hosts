 check host scratch.stg.fra1 with address scratch.stg.fra1.do.quyo.net
   group network
   if failed ping4                                              for 3 times within 15 cycles then alert  # IPv4 only
   if failed ping6                                              for 3 times within 15 cycles then alert  # IPv6 only
   if failed port 22 protocol ssh with timeout 15 seconds       for 3 times within 15 cycles then alert

