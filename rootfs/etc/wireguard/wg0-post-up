#!/usr/bin/env bash

# iptables  -A FORWARD -i wg0 -j ACCEPT
# ip6tables -A FORWARD -i wg0 -j ACCEPT

iptables  -t nat -A POSTROUTING -s 10.10.1.0/24   -o ens3 -j MASQUERADE
ip6tables -t nat -A POSTROUTING -s fc00:10:1::/64 -o ens3 -j MASQUERADE



IPV4=$(hostname -I | tr ' ' '\n' | egrep '^[0-9.]+$'       | egrep -v '^(127|10|192)\.')
IPV6=$(hostname -I | tr ' ' '\n' | egrep '^[0-9a-fA-F:]+$' | egrep -v '^(:|fc00):')

iptables  -t nat -A PREROUTING -d $IPV4 -p udp --dport 53    -j DNAT --to-destination :443
ip6tables -t nat -A PREROUTING -d $IPV6 -p udp --dport 53    -j DNAT --to-destination :443

iptables  -t nat -A PREROUTING -d $IPV4 -p udp --dport 80    -j DNAT --to-destination :443
ip6tables -t nat -A PREROUTING -d $IPV6 -p udp --dport 80    -j DNAT --to-destination :443

iptables  -t nat -A PREROUTING -d $IPV4 -p udp --dport 587   -j DNAT --to-destination :443
ip6tables -t nat -A PREROUTING -d $IPV6 -p udp --dport 587   -j DNAT --to-destination :443

iptables  -t nat -A PREROUTING -d $IPV4 -p udp --dport 51820 -j DNAT --to-destination :443
ip6tables -t nat -A PREROUTING -d $IPV6 -p udp --dport 51820 -j DNAT --to-destination :443
